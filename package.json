{
  "name": "tubenix",
  "version": "1.0.0",
  "description": "Advanced multi-platform video downloader application",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node server.js",
    "client": "cd client && npm start",
    "build": "npm run install-server && npm run install-client && npx puppeteer browsers install chrome && cd client && npm run build",
    "start": "cd server && node server.js",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "postinstall": "cd server && npm install && npx puppeteer browsers install chrome"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "video-downloader",
    "youtube-downloader",
    "mern-stack",
    "tubenix"
  ],
  "author": "Adarsh Kumar",
  "license": "MIT"
}
