# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/tubenix

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://tubenix.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true

# Puppeteer Configuration (for Render deployment)
PUPPETEER_EXECUTABLE_PATH=/opt/render/.cache/puppeteer/chrome/linux-139.0.7258.66/chrome-linux64/chrome
PUPPETEER_CACHE_DIR=/opt/render/.cache/puppeteer

# Browser Pool Configuration
MAX_BROWSERS=2
MAX_PAGES_PER_BROWSER=3
BROWSER_TIMEOUT=30000
PAGE_TIMEOUT=20000

# Deployment Configuration
RENDER=true
